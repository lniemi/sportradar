{
  "name": "trailradar-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "dev:spectator": "pnpm --filter @trailradar/spectator dev",
    "dev:website": "pnpm --filter @trailradar/website dev",
    "dev:docs": "pnpm --filter @trailradar/docs dev",
    "build": "turbo run build",
    "build:spectator": "pnpm --filter @trailradar/spectator build",
    "build:website": "pnpm --filter @trailradar/website build",
    "build:docs": "pnpm --filter @trailradar/docs build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
